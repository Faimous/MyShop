@{ 
    bool isAuthenticated = false;
    if(ViewBag.isAuthenticated != null)
    {
        isAuthenticated = ViewBag.isAuthenticated;
    }
}

@if (isAuthenticated)
{
    <div id="MyShopAuthorized">
        @(Html.Kendo().Menu()
          .Name("Menu")
          .Items(items =>
          {
              items.Add().Text("Product List").Action("List", "Product");
              items.Add().Text("Contact").Action("Contact", "Home");
              items.Add().Text("About").Action("About", "Home");
              items.Add().Text("Log in").Action("Login", "Account");
              items.Add().Text("Register").Action("Register", "Account");
              items.Add().Text("Add Product").Action("AddPruduct", "Product");


          })
        )

    </div>
}

else
{
<div id = "MyShopUnauthorized" >
    @(Html.Kendo().Menu()
      .Name("Menu")
      .Items(items =>
      {
          items.Add().Text("Product List").Action("List", "Product");
          items.Add().Text("Contact").Action("Contact", "Home");
          items.Add().Text("About").Action("About", "Home");
          items.Add().Text("Log in").Action("Login", "Account");
          items.Add().Text("Register").Action("Register", "Account");


      })
    )


</div >
    }


