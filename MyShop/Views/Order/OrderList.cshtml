
@(Html.Kendo().Grid<MyShop.Models._Databse.Orders_Products_Table>()
      .Name("Order_Products_Grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.OrderID);
          columns.Bound(c => c.ProductId);
          columns.Bound(c => c.Quantity);
          columns.Bound(c => c.TotalSale).Title("Total price ($)");

      })
      .ToolBar(toolbar => {
          toolbar.Excel();
          toolbar.Pdf();
      })
      .Filterable()
      //.Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Order_Products_Read", "Order"))
      )
)
